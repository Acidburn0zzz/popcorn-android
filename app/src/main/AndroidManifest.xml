<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pct.droid" android:installLocation="auto">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:logo="@drawable/ic_logo"
        android:label="@string/app_name"
        android:theme="@style/Theme.PopcornTime"
        android:name=".PopcornApplication"
        >
        <activity
            android:name=".activities.OverviewActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MovieDetailActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.StreamLoadingActivity"
            android:screenOrientation="sensorLandscape"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.VideoPlayerActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.AppCompat"
            android:label="@string/app_name" />
        <service android:name=".services.StreamerService" android:process=":node" />

        <service android:name="org.videolan.vlc.audio.AudioService" />
    </application>

</manifest>
